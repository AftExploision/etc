set $terminal urxvt

set $mod Mod4
set $mod2 Mod4+Shift

set $up    q
set $down  k
set $left  minus
set $right c

set $workspace1 home
set $workspace2 terminal
set $workspace3 browse
set $workspace4 4
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9
set $workspace0 10

set $workspace

floating_modifier $mod

font -benis-uushi-medium-r-normal--11-90-75-75-p-58-iso10646-1

bindsym $mod2+semicolon kill

bindsym $mod+$left focus left
bindsym $mod2+$left move left

bindsym $mod+$down focus down
bindsym $mod2+$down move down

bindsym $mod+$up focus up
bindsym $mod2+$up move up

bindsym $mod+$right focus right
bindsym $mod2+$right move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+space focus mode_toggle
bindsym $mod2+space floating toggle

#bindsym $mod+t focus parent
#bindsym $mod+d focus child

bindsym $mod+bracketleft  workspace $workspace1
bindsym $mod+bracketright workspace $workspace2
bindsym $mod+slash        workspace $workspace3
bindsym $mod+p            workspace $workspace4
bindsym $mod+f            workspace $workspace5
bindsym $mod+m            workspace $workspace6
bindsym $mod+l            workspace $workspace7
bindsym $mod+j            workspace $workspace8
bindsym $mod+4            workspace $workspace9
bindsym $mod+3            workspace $workspace10

bindsym $mod2+bracketleft  move container to workspace $workspace1
bindsym $mod2+bracketright move container to workspace $workspace2
bindsym $mod2+slash        move container to workspace $workspace3
bindsym $mod2+p            move container to workspace $workspace4
bindsym $mod2+f            move container to workspace $workspace5
bindsym $mod2+m            move container to workspace $workspace6
bindsym $mod2+l            move container to workspace $workspace7
bindsym $mod2+j            move container to workspace $workspace8
bindsym $mod2+4            move container to workspace $workspace9
bindsym $mod2+3            move container to workspace $workspace10

bindsym $mod2+Y reload
bindsym $mod2+B exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+g exec dmenu_run

bindsym XF86AudioRaiseVolume exec amixer set Master on 1%+
bindsym XF86AudioLowerVolume exec amixer set Master on 1%-
bindsym XF86AudioMute        exec amixer set Master toggle

bindsym $mod+Return exec urxvt

bindsym Print exec screenshot

bindsym $mod+y mode "resize"

bindsym $mod+d fullscreen

mode "resize" {
	bindsym $down  resize grow   height 10 px or 10 ppt
	bindsym $up    resize shrink height 10 px or 10 ppt
	bindsym $right resize grow   width  10 px or 10 ppt
	bindsym $left  resize shrink width  10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bar {
	mode hide
}

new_window pixel 2

assign [class="(?i)google-chrome"] browse
assign [class="(?i)urxvt"] terminal
